@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Восстановление пароля";
}

<h1 class="colortext">@ViewData["Title"]</h1>
<h4 class="colortext">Введите вашу почту</h4>
<hr />
<body class="body">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="colortext">Почта</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">✉</span>
                        </div>
                        <input type="text" asp-for="Input.Email" class="form-control" placeholder="Почта" aria-label="Почта" aria-describedby="basic-addon1">
                    </div>
                </div>
                <button type="submit" class="btn br0 btn-secondary">Подтвердить</button>
            </form>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
