@page
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Двух-сторонняя аутенфикация (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h4>@ViewData["Title"]</h4>
@if (Model.Is2faEnabled)
{
    if (Model.RecoveryCodesLeft == 0)
    {
        <div class="alert alert-danger">
            <strong>У вас не осталось кодов восстановления.</strong>
            <p>
                Вы можете <a asp-page="./GenerateRecoveryCodes">
                    сгенерировать новый набор кодов восстановления
                </a> прежде чем вы сможете войти в систему с помощью кода восстановления.
            </p>
        </div>
    }
    else if (Model.RecoveryCodesLeft == 1)
    {
        <div class="alert alert-danger">
            <strong>У вас остался 1 код восстановления.</strong>
            <p>У вас есть <a asp-page="./GenerateRecoveryCodes">сгенерировать новый набор кодов восстановления</a>.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft <= 3)
    {
        <div class="alert alert-warning">
            <strong>
                У вас есть @Model.RecoveryCodesLeft
                кодов восстановления.
            </strong>
            <p>You should <a asp-page="./GenerateRecoveryCodes">
    сгенерировать новый набор кодов восстановления
</a>.</p>
        </div>
    }

    if (Model.IsMachineRemembered)
    {
        <form method="post" style="display: inline-block">
            <button type="submit" class="btn br0 btn-secondary">Забыть этот браузер</button>
        </form>
    }
    <a asp-page="./Disable2fa" class="btn br0 btn-secondary">Отключить двух-стороннию аутенфикацию</a>
    <a asp-page="./GenerateRecoveryCodes" class="btn br0 btn-secondary">Сбросить коды восстановления</a>
}

<h5>Приложение аутенфикации</h5>
@if (!Model.HasAuthenticator)
{
<a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn br0 btn-secondary">Добавить приложение для аутентификации</a>
}
else
{
<a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn br0 btn-secondary">Установить приложение аутентификатора</a>
    <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn br0 btn-secondary">Сбросить приложение аутентификатора</a>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}