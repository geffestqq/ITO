@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";

    }
}

<h2 class="text-center colortext">Личный кабинет аккаунта</h2>
<body class="body">
    <div>
        <h4 class="colortext">Смена данных аккаунта</h4>
        <hr />
        <div class="row colortext">
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9 colortext">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
@section Scripts {
    @RenderSection("Scripts", required: false)
}
