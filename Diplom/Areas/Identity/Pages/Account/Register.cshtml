@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h1 class="colortext">@ViewData["Title"]</h1>

<body class="body">
    <div class="row">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 class="colortext">Создание нового аккаунта</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group colortext">
                    <label asp-for="Input.Email">Почта</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">✉</span>
                        </div>
                        <input type="text" asp-for="Input.Email" class="form-control" placeholder="Почта" aria-label="Почта" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="form-group colortext">
                    <label asp-for="Input.Password">Пароль</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">🔑</span>
                        </div>
                        <input asp-for="Input.Password" class="form-control" placeholder="Пароль" aria-label="Пароль" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="colortext">Подтверждение пароля</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">🔑</span>
                        </div>
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Подтверждение пароля" aria-label="Подтверждение пароля" aria-describedby="basic-addon1">
                    </div>
                </div>
                <button type="submit" class="btn br0 btn-secondary">Зарегистрировать</button>
            </form>
        </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
