@model NewDiplom.Models.TaskDistribution

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center colortext">Подробнее</h1>
<h4 class="text-center colortext">Распределение задач</h4>
<body class="body">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt class="colortext">
                Время распределения
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Time_Distribution)
            </dd>
            <dt class="colortext">
                Дата распределения
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Date_Distribution)
            </dd>
            <dt class="colortext">
                Период распределения
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Period_Distribution)
            </dd>
            <dt class="colortext">
                Совместительство
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Plurality.Id)
            </dd>
            <dt class="colortext">
                Задача
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Zadachi.View)
            </dd>
            <dt class="colortext">
                Статус
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Status.Status_name)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" , class="btn br0 btn-secondary">Изменить</a> |
        <a asp-action="Index" class="colortext">Обратно к распределению задач</a>
    </div>
</body>